{
    "extends": "eslint:recommended",
    "rules": {
        "array-bracket-newline": ["warn", "always"],
        "block-spacing": ["warn", "always"],
        "brace-style": 1,
        "camelcase": 1,
        "comma-dangle": 2,
        "curly": 1,
        "eol-last": ["warn", "always"],
        "eqeqeq": 1,
        "func-call-spacing": ["warn", "never"],
        "guard-for-in": 1,
        "indent": ["warn", 4],
        "keyword-spacing": ["warn", {"before": true, "after": true}],
        "new-cap": 1,
        "no-alert": 1,
        "no-bitwise": 0,
        "no-caller": 1,
        "no-debugger": 2,
        "no-empty": 1,
        "no-empty-function": 1,
        "no-eq-null": 1,
        "no-extra-semi": 1,
        "no-invalid-regexp": 2,
        "no-new": 1,
        "no-obj-calls": 2,
        "no-return-assign": 1,
        "no-shadow": 1,
        "no-use-before-define": 1,
        "no-undef": 1,
        "no-unmodified-loop-condition": 1,
        "no-unreachable": 2,
        "no-unused-vars": 0,
        "quotes": ["warn", "single"],
        "semi": 1,
        "space-before-function-paren": ["error", {"anonymous": "never", "named": "never", "asyncArrow": "never"}],
        "strict": 2
    },
    "globals": ["$", "jQuery", "cssua", "LazyLoad"],
    "envs": ["node", "browser"]
}
